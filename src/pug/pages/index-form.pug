extends ../layout/base

block variables
    //подключаем основу для страницы и выводим в нее данные
    - var title='COLORFUN';
    - var description='COLORFUN';
    - var pageClass='index-page';
    - var imagesData = require('../../js/imagesData.json');
    - var articles = require('../../js/articles.json');
    - var categoriesHolidays = require('../../js/categoriesHolidays.json');
    - var categoriesChildren = require('../../js/categoriesChildren.json');

block content
    button.up-arrow

    section.form
        div.form__container

            form(class="form__wrapper" id="form-reg")
                div(class="form__group")
                    h2 Регистрация
                div(class="form__item")
                    input(name="name" type="text" id="exampleInputName1" placeholder="Name Surname" minLength="3"  maxLength="40" required)
                div(class="form__item")
                    input(name="email" type="email" id="exampleInputEmail1" placeholder="Email" minLength="6" maxLength="40" required)
                div(class="form__item")
                    input(name="phone" type="tel"  id="phone" placeholder="Phone" required)
                div(class="form__checkbox")
                    input(type="checkbox" id="scales" name="scales" required checked)
                    label(for="scales" id="checkboxLabel") I agree with the terms
                a(class="h19 " href="/index-auth.html") Уже зарегистрированы? Войти
                button(type="submit" class="button b1 form__button") Зарегистрация



